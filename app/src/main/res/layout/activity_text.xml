<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.modacenter.modacenterbeta.TextActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:text="normal textview"
        android:textStyle="bold"
        android:padding="6dip"
        android:background="#e51c23"
        />

    <classes.MyScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#f9bdbb"
        android:id="@+id/scroller"
        >

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textSize="18sp"
            android:lineSpacingMultiplier="1.1"
            />

    </classes.MyScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="justified textview"
        android:background="#259b24"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textStyle="bold"
        android:padding="6dip"
        />

    <classes.MyScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#a3e9a4"
        android:id="@+id/justified_scroller"
        >

        <classes.TextJustify
            android:id="@+id/justified_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textSize="18sp"
            android:lineSpacingMultiplier="1.1"
            />

    </classes.MyScrollView>
</LinearLayout>
